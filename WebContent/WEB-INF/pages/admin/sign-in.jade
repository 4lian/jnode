extends layout

block meta
    link(rel="stylesheet", href="lib/artDialog/skins/default.css")

block content
    .navbar
        .navbar-inner
            a.brand(href="/")
                span.first Dream
                span.second Lu
    .row-fluid
        .dialog
            .block
                p.block-heading 登录
                .block-body
                    form(action="/admin/session", method="post")
                        label 邮箱帐号：
                        input.span12(type="text", name="email", required="required")
                        label 密码：
                        input.span12(type="password", name="pwd", required="required")
                        input.btn.btn-primary.pull-right(type="submit", value="登录")
                        label.remember-me
                            input(type="checkbox", name="remember", value="1")
                            | &nbsp;记住密码
                        .clearfix
            p.pull-right
                a(href="reset-password.html") 忘了密码？

block script
    script(src="/lib/artDialog/jquery.artDialog.js")
    script
        $(function(){
            $('form').submit(function(){
                var dialog = art.dialog();
                $.post($(this).attr("action")
                    , {email: $('input[name="email"]').val(), pwd: $('input[name="pwd"]').val(), remember: $('input[name="remember"]').val()}
                    , function (data){
                        if(data.status === 0) {
                            dialog.content('登录成功！').time(1);
                            setTimeout(function(){
                                location.reload();
                            }, 1000);
                        } else {
                            dialog.content('登录失败，请检查用户名和密码！').time(2);
                        }
                });
                return false;
            });
        })